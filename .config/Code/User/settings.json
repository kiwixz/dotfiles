{
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,

  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "editor.cursorStyle": "line-thin",
  "editor.fontFamily": "Kiosevka, Consolas, monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "boundary",
  "editor.suggestSelection": "first",
  "explorer.autoReveal": false,
  "files.eol": "\n",
  "window.openFilesInNewWindow": "default",
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "newUntitledFile",

  "clangd.arguments": ["--header-insertion=never"],
  "clangd.fallbackFlags": ["-std=c++20", "-Wall", "-Wextra"],
  "clangd.onConfigChanged": "restart",
  "errorLens.addNumberOfDiagnostics": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "prettier.printWidth": 120,
  "pyright.disableLanguageServices": true,
  "python.analysis.memory.keepLibraryAst": true,
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.useLibraryCodeForTypes": true,
  "python.experiments.enabled": false,
  "python.formatting.blackArgs": ["--line-length=120"],
  "python.formatting.provider": "black",
  "python.linting.pylintArgs": [
    "--disable=invalid-name",
    "--disable=missing-docstring",
    "--disable=no-else-return",
    "--unsafe-load-any-extension=y",
    "--max-line-length=120"
  ],
  "python.linting.pylintEnabled": true,
  "python.linting.pylintUseMinimalCheckers": false,
  "python.showStartPage": false,
  "svg.preview.mode": "svg",
  "workbench.iconTheme": "material-icon-theme",

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "workbench.colorCustomizations": {
    "activityBar.background": "#0a0e1a",
    "editor.background": "#0a0e1a",
    "editor.selectionBackground": "#236",
    "editorGroupHeader.tabsBackground": "#0a0e1a",
    "editorIndentGuide.background": "#aaf4",
    "editorIndentGuide.activeBackground": "#aaf4",
    "editorWhitespace.foreground": "#aaf2",
    "sideBar.background": "#0a0e1a",
    "sideBar.foreground": "#ddd",
    "tab.inactiveBackground": "#0a0e1a",
    "tab.border": "#0000",
    "titleBar.activeBackground": "#0a0e1a",
    "scrollbar.shadow": "#0000"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "foreground": "#584"
        }
      },
      {
        "scope": "constant.language",
        "settings": {
          "foreground": "#a50"
        }
      },
      {
        "scope": "constant.numeric",
        "settings": {
          "foreground": "#c86"
        }
      },
      {
        "scope": "entity.name.operator",
        "settings": {
          "foreground": "#eea"
        }
      },
      {
        "scope": "entity.name.function.member",
        "settings": {
          "foreground": "#eea"
        }
      },
      {
        "scope": "entity.other.attribute",
        "settings": {
          "foreground": "#909592"
        }
      },
      {
        "scope": "keyword.control",
        "settings": {
          "foreground": "#d8b"
        }
      },
      {
        "scope": "keyword.control.return",
        "settings": {
          "foreground": "#f3a"
        }
      },
      {
        "scope": "keyword.control.throw",
        "settings": {
          "foreground": "#f3a"
        }
      },
      {
        "scope": "keyword.other.operator",
        "settings": {
          "foreground": "#0ac"
        }
      },
      {
        "scope": "keyword.other.unit",
        "settings": {
          "foreground": "#a50"
        }
      },
      {
        "scope": "keyword.other.static_assert",
        "settings": {
          "foreground": "#909592"
        }
      },
      {
        "scope": "keyword.operator",
        "settings": {
          "foreground": "#fff"
        }
      },
      {
        "scope": "keyword.operator.cast",
        "settings": {
          "foreground": "#0ac"
        }
      },
      {
        "scope": "punctuation.section",
        "settings": {
          "foreground": "#fff"
        }
      },
      {
        "scope": "punctuation.terminator",
        "settings": {
          "foreground": "#fff"
        }
      },
      {
        "scope": "storage.modifier",
        "settings": {
          "foreground": "#0ac"
        }
      },
      {
        "scope": "storage.modifier.pointer",
        "settings": {
          "foreground": "#fff"
        }
      },
      {
        "scope": "storage.modifier.reference",
        "settings": {
          "foreground": "#fff"
        }
      },
      {
        "scope": "string.quoted",
        "settings": {
          "foreground": "#ea9"
        }
      },
      {
        "scope": "storage.type",
        "settings": {
          "foreground": "#a00"
        }
      },
      {
        "scope": "storage.type.built-in",
        "settings": {
          "foreground": "#56f"
        }
      },
      {
        "scope": "storage.type.decltype",
        "settings": {
          "foreground": "#0f6"
        }
      },
      {
        "scope": "storage.type.template",
        "settings": {
          "foreground": "#56f"
        }
      },
      {
        "scope": "variable.language",
        "settings": {
          "foreground": "#a00"
        }
      },
      {
        "scope": "variable.other.enummember",
        "settings": {
          "foreground": "#adf"
        }
      }
    ]
  },
  "editor.semanticTokenColorCustomizations": {
    "rules": {
      "class": "#0fc",
      "comment": "#695",
      "enum": "#5cb",
      "enumConstant": "#c86",
      "enumMember": "#c86",
      "function": "#eea",
      "macro": "#a4f",
      "namespace": "#acb",
      "parameter": "#adf",
      "type": "#56f",
      "typeParameter": "#0f6",
      "variable": "#adf"
    }
  }
}
