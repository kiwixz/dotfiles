{
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,

  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "editor.cursorStyle": "line-thin",
  "editor.fontFamily": "Kiosevka, Consolas, monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "boundary",
  "editor.suggestSelection": "first",
  "explorer.autoReveal": false,
  "files.eol": "\n",
  "window.openFilesInNewWindow": "default",
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "newUntitledFile",

  "clangd.arguments": ["--header-insertion=never", "--clang-tidy=false"],
  "clangd.fallbackFlags": ["-std=c++17", "-Wall", "-Wextra"],
  "errorLens.addNumberOfDiagnostics": true,
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "prettier.printWidth": 120,
  "pyright.disableLanguageServices": true,
  "python.formatting.blackArgs": ["--line-length=120"],
  "python.formatting.provider": "black",
  "python.linting.pycodestyleArgs": ["--max-line-length=120"],
  "python.linting.pycodestyleEnabled": true,
  "python.linting.pylintArgs": [
    "--disable=invalid-name",
    "--disable=missing-docstring",
    "--disable=no-else-return",
    "--max-line-length=120"
  ],
  "python.linting.pylintEnabled": true,
  "python.showStartPage": false,
  "workbench.iconTheme": "material-icon-theme",

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
